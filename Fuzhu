#include <iostream>
#include <iomanip>
//配合下面的输出精度
using namespace std;

int main ()
{
  float a1;
  double a;
  double b1;
  long double b2; 
  long double b;
  size_t c;
  //int是integer的缩写
  //可以用size_t代替=unsigned int
  
  cout << "Square press 4;Rectangle/Parallelogram press 22" << endl;
  cin >> c;
  //控制cout的显示精度
  //1.强制以小数方式显示
  cout << fixed;
  //2.控制显示的精度
  cout << setprecision(8);
  
  if (c == 4)
    {
      cout << "A side:" << endl;
      cin >> a1;
      a = a1*a1;
      
      cout << "The area of square:" << a << endl;
    }
    
  if (c == 22)
    {
      cout << "A length: and A width:" << endl;
      cin >> b1 >> b2;
      b = b1*b2;
      
      cout << "The area of Rectangle/Parallelogram:" << b << endl;
    }

  return 0;
}
