#include <iostream>
using namespace std;

int main ()
{
  float a;
  double b1;
  long double b2;
  size_t c;
  //int是integer的缩写
  //可以用size_t代替=unsigned int

  cout << "Square press 4;Rectangle/Parallelogram press 22" << endl;
  cin >> c;

  if (c == 4)
    {
      cout << "A side:" << endl;
      cin >> a;
      
      cout << "The area of square:" << a * a << endl;
    }
    
  if (c == 22)
    {
      cout << "A length: and A width:" << endl;
      cin >> b1 >> b2;
      
      cout << "The area of Rectangle/Parallelogram:" << b1*b2 << endl;
    }

  return 0;
}
